<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="brgr" name="burger_name">
  </div>

 

  <button type="submit">Submit</button>
</form>



    <h2>Burgers that have been eaten</h2>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          <li>
          {{this.burger_name}}

          <button class="change-eaten" data-id="{{this.id}}" data-eaten="{{this.devoured}}">
            {{#if this.devoured}}You ate me!{{else}}Please eat me!{{/if}}
          </button>
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
