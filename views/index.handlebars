<h1>Burger Time!</h1>

<h2>Lets eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
 {{this.burger_name}}
</ul>

<button class="change-eaten" data-id="{{this.id}}" data-eaten="{{this.devoured}}">
            {{#if this.devoured}}You ate me!{else}}Please eat me!{{/if}}
          </button>
          </li>
